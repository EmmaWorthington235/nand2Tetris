/**
 * 4-way demultiplexor:
 * {a, b, c, d} = {in, 0, 0, 0} if sel == 00
 *                {0, in, 0, 0} if sel == 01
 *                {0, 0, in, 0} if sel == 10
 *                {0, 0, 0, in} if sel == 11
 */

CHIP DMux4Way {
    IN in, sel[2];
    OUT a, b, c, d;

    PARTS:
 //   Mux(a=in, b=false, sel=sel[0], out=x);
  //  Mux(a=false, b=in, sel=sel[0], out=y);
    DMux(in=in, sel=sel[0], a=x, b=y);
    Not(in=sel[1], out=notSel0);
    And(a=x, b=notSel0, out=a);
    And(a=y, b=notSel0, out=b);
    And(a=x, b=sel[1], out=c);
    And(a=y, b=sel[1], out=d);
}